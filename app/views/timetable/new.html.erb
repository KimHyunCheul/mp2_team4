<h1>Timetable#new</h1>

<div class="left-field">
	<div><%= label_tag :school, "학과 선택" %></div>
	<div>
		<div>
			<%= select_tag :school, options_for_select(@schools.collect{ |s| [s.school_name, s.id] }, nil), { id: "school_select" } %>
		</div>
		<div>
			<%= select_tag :department, options_for_select(@departments.collect{ |d| [d.department_name, d.id]}, nil), { id: "department_select" } %>
		</div>
	</div>
	<div id="lecture-container">
		<ul id="lecture-container-body">
		</ul>
	</div>
</div>

<div id="timetable">
	<div id="table-wrap">
		<div id="colheaders">
			<% for day in ["월","화","수","목","금","토"] %>
				<div class="colhead">
					<span><%= day %></span>
				</div>
			<% end %>
		</div>
		<div id="table-body">
			<div id="rowheaders">
				<% for i in 8..11 %>
					<div class="rowhead">
						<span>오전 <%= i %>시</span>
					</div>
				<% end %>
				<div class="rowhead">
					<span>오후 12시</span>
				</div>
				<% for i in 1..9 %>
					<div class="rowhead">
						<span>오후 <%= i %>시</span>
					</div>
				<% end %>
			</div>
			<div id="table-grid">
			</div>
		</div>
	</div>
</div>
